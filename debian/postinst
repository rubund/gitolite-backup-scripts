#!/bin/sh
# postinst script for naturfakta-web
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
        db_get gitolite-backup-scripts/gitoliteuser
        USERNAME=$RET
        db_get gitolite-backup-scripts/remoteserver
        SERVER=$RET
        db_get gitolite-backup-scripts/salt
        SALT=$RET
        db_get gitolite-backup-scripts/key
        KEY=$RET

        chown $USERNAME:$USERNAME /var/lib/backup-gitolite

        if [ -d /var/lib/backup-gitolite/$USERNAME ] ; then
            echo "Already set up"
        else
            echo "Setting up initial"
            su $USERNAME -c "git init /var/lib/backup-gitolite/$USERNAME"
            cd /var/lib/backup-gitolite/$USERNAME
            #PATH="$PATH:/usr/lib/gitolite-backup-scripts/git-encrypt" gitcrypt init 
            su $USERNAME -c "cp /usr/share/gitolite-backup-scripts/gitconfig /var/lib/backup-gitolite/$USERNAME/.git/config"
            su $USERNAME -c "sed -i 's/salt = SALT$/salt = $SALT/' /var/lib/backup-gitolite/$USERNAME/.git/config"
            su $USERNAME -c "sed -i 's/pass = PASS$/pass = $PASS/' /var/lib/backup-gitolite/$USERNAME/.git/config"
            su $USERNAME -c "sed -i 's/url = REMOTESERVER$/url = $SERVER/' /var/lib/backup-gitolite/$USERNAME/.git/config"
        fi
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
